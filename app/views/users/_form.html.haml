= semantic_form_for @user do |f|

  = f.semantic_errors

  = f.inputs do
    = f.input :name, label: true
    = f.input :email, label: true
    = f.input :temporary_password, as: :string, label: true if @user.new_record?
    = f.input :is_admin, label: true

  = f.actions do
    = f.action :submit, label: true
